<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false) @*Para aquellos CSSs que quiero cargar en vistas específicas*@
</head>
<body>
    <header class="navbar navbar-default menuCV navbar-fixed-top">
        <div class="container">
            <nav class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand logotipo">
                    <img src="~/images/pluma.png" alt="logo pluma de escribir sobre CV">
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                    <span>HazTu<strong>CV</strong></span>
                </a>
            </nav>
            <nav class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Mi CV", "Index", "CV")</li>
                    </ul>
                }                
                @Html.Partial("_LoginPartial")
            </nav>
        </div>
    </header>
    <div class="container-fluid body-content">
        @RenderBody()
        <footer id="footer">
            <p><strong>&copy; DAW <a href="http://jlalovi.github.io/">jlalovi</a> @DateTime.Now.Year</strong></p>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
            </ul>
</footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/footerFijo")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
